<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/bQueueState"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:text="Cтан черги"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_marginTop="79dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/bRocordToZnap"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:textAlignment="center"
        android:text="Запис до ЦНАП"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/bQueueState"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/bReceptionToOfficial"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:text="Запис на прийом до посадовця"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_below="@+id/bRocordToZnap"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp" />

    <Button
        android:id="@+id/bLeaveReview"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:text="Відгук"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/bReceptionToOfficial"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/bCheck"
        android:layout_width="320dp"
        android:layout_height="60dp"
        android:text="Перевірити стан виконання звернення"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/bLeaveReview"
        android:layout_alignLeft="@+id/bLeaveReview"
        android:layout_alignStart="@+id/bLeaveReview" />

    <Button
        android:id="@+id/bOwnCabinet"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="Особистий кабінет"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_marginTop="34dp"
        android:layout_below="@+id/bCheck"
        android:layout_alignRight="@+id/bCheck"
        android:layout_alignEnd="@+id/bCheck" />

</RelativeLayout>