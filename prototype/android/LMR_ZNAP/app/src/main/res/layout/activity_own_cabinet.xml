<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">


    <TextView
        android:id="@+id/etFirstName"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/etMiddleName"
        android:layout_alignStart="@+id/etMiddleName"
        android:layout_alignTop="@+id/linearLayout3"
        android:text=""
        android:textAlignment="center"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/etMiddleName"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/linearLayout"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@+id/linearLayout2"
        android:layout_toRightOf="@+id/linearLayout2"
        android:text=""
        android:textAlignment="center"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/etLastName"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/linearLayout2"
        android:layout_alignLeft="@+id/etFirstName"
        android:layout_alignStart="@+id/etFirstName"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:text=""
        android:textAlignment="center"
        android:textSize="20dp" />




    <LinearLayout
        android:layout_marginTop="240dp"
        android:orientation="horizontal"
        android:paddingLeft="25dp"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout3">
        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/person"/>
        <TextView
            android:textStyle="bold"

            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:text="Ваше ім'я:"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="290dp"
        android:orientation="horizontal"
        android:paddingLeft="25dp"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout2">
        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/person"/>
        <TextView
            android:textStyle="bold"

            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:text="Ваше прізвище:"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="340dp"
        android:orientation="horizontal"
        android:paddingLeft="25dp"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout">
        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/person"/>
        <TextView
            android:textStyle="bold"

            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:text="По-батькові:"/>

    </LinearLayout>

    <Button
        android:id="@+id/myreviews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="75dp"
        android:layout_toEndOf="@+id/linearLayout3"
        android:layout_toRightOf="@+id/linearLayout3"
        android:background="@drawable/buttonstyle"
        android:text="Мої відгуки"
        android:textColor="#fff" />
</RelativeLayout>