<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">


    <ImageView
        android:id="@+id/znap_logo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_weight="1"
        android:scaleType="center"
        android:src="@drawable/znap_logo" />

    <Button
        android:id="@+id/bQueueState"
        android:layout_width="290dp"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/bReceptionToOfficial"
        android:layout_alignStart="@+id/bReceptionToOfficial"
        android:layout_below="@+id/znap_logo"
        android:layout_weight="1"
        android:text="Cтан черги"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:theme="@style/PrimaryButton" />

    <Button

        android:id="@+id/bRecordToZnap"
        android:layout_width="290dp"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/bReceptionToOfficial"
        android:layout_alignStart="@+id/bReceptionToOfficial"
        android:layout_below="@+id/bReceptionToOfficial"
        android:layout_weight="1"
        android:text="Запис до ЦНАП"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:theme="@style/PrimaryButton" />

    <Button

        android:id="@+id/bReceptionToOfficial"
        android:layout_width="290dp"
        android:layout_height="60dp"
        android:layout_below="@+id/bQueueState"
        android:layout_centerHorizontal="true"
        android:layout_weight="1"
        android:text="Запис на прийом до посадовця"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:theme="@style/PrimaryButton" />

    <Button

        android:id="@+id/bLeaveReview"
        android:layout_width="290dp"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/bCheck"
        android:layout_alignStart="@+id/bCheck"
        android:layout_below="@+id/bCheck"
        android:layout_weight="1"
        android:text="Відгук"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:theme="@style/PrimaryButton" />

    <Button

        android:id="@+id/bCheck"
        android:layout_width="290dp"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/bRecordToZnap"
        android:layout_alignStart="@+id/bRecordToZnap"
        android:layout_below="@+id/bRecordToZnap"
        android:layout_weight="1"
        android:text="Перевірити стан виконання звернення"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:theme="@style/PrimaryButton" />

    <Button

        android:id="@+id/bOwnCabinet"
        android:layout_width="160dp"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="33dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="Особистий кабінет"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:theme="@style/PrimaryButton" />

    <Button

        android:id="@+id/bServices"
        android:layout_width="160dp"
        android:layout_height="65dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/bOwnCabinet"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:text="Реєстр послуг"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:theme="@style/PrimaryButton" />


</RelativeLayout>