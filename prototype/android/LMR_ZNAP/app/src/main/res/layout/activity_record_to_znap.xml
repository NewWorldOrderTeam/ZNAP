<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.znap.lmr.lmr_znap.RecordToZnapActivity">

    <Button
        android:id="@+id/bTreg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="63dp"
        android:layout_marginEnd="112dp"
        android:layout_marginRight="112dp"
        android:text="Зареєструватись " />

    <Spinner
        android:id="@+id/spinnerForZnaps"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="24dp"
        android:entries="@array/znaps" />

    <!-- Spinner Dropdown -->
    <Spinner
        android:id="@+id/spinnerForServices"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_above="@+id/bTreg"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="73dp" />

    <Spinner
        android:id="@+id/spinnerForTypes"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/spinnerForZnaps"
        android:layout_marginTop="52dp"
        android:entries="@array/types" />

</RelativeLayout>