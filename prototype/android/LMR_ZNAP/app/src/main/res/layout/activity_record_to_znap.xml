<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ua.lviv.iot.lmr_cnap.Activities.RecordToZnapActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView

                android:id="@+id/textForZnap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:gravity="center_horizontal"
                android:text="Оберіть центр надання послуг"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textColor="@color/colorNonActive"/>

            <TextView
                android:id="@+id/textForZnap1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:gravity="center_horizontal"
                android:text="   Адреса відділення "
                android:textSize="15dp"
                android:textColor="@color/colorNonActive"/>

            <Spinner
                android:id="@+id/spinnerForZnaps"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/color"
                android:textAlignment="center" />

            <Button
                android:id="@+id/bTreg"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="140dp"
                android:text="Зареєструватись "
                android:theme="@style/mainActButton" />
        </LinearLayout>





</RelativeLayout>