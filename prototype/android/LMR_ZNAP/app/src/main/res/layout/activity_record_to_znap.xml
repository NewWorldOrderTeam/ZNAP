<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.znap.lmr.lmr_znap.RecordToZnapActivity">


    <ImageView
        android:id="@+id/znap_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="center"
        android:src ="@drawable/znap_logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Вибір ЦНАПу:"
        android:textSize="30dp"
        android:id="@+id/tvSpinnerZnap"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="39dp"
        android:layout_below="@+id/znap_logo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:id="@+id/spinnerZnap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:prompt="@string/spinner_title"
        android:layout_alignBottom="@+id/tvSpinnerZnap"
        android:layout_toRightOf="@+id/tvSpinnerZnap"
        android:layout_toEndOf="@+id/tvSpinnerZnap" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Вибір послуг:"
        android:textSize="30dp"
        android:id="@+id/tvSpinnerServices"
        android:layout_marginTop="90dp"
        android:layout_below="@+id/tvSpinnerZnap"
        android:layout_alignLeft="@+id/tvSpinnerZnap"
        android:layout_alignStart="@+id/tvSpinnerZnap" />

    <Spinner
        android:id="@+id/spinnerServices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:prompt="@string/spinner_title"
        android:layout_alignBottom="@+id/tvSpinnerServices"
        android:layout_toRightOf="@+id/tvSpinnerServices"
        android:layout_toEndOf="@+id/tvSpinnerServices" />


</RelativeLayout>