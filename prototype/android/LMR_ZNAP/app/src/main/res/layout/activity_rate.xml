<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.znap.lmr.lmr_znap.RateActivity">


    <EditText
        android:id="@+id/etDescription"
        android:layout_width="300dp"
        android:layout_height="120dp"

        android:layout_alignLeft="@+id/etUser_id"
        android:layout_alignStart="@+id/etUser_id"
        android:layout_below="@+id/etUser_id"
        android:layout_marginTop="76dp"
        android:background="#E0E0E0"
        android:ems="10"
        android:hint="Залиште відгук"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/etUser_id"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/btLeaveReview"
        android:layout_alignStart="@+id/btLeaveReview"
        android:layout_below="@+id/services"
        android:layout_marginTop="38dp"
        android:background="#E0E0E0"
        android:ems="10"
        android:hint="User id"
        android:inputType="number"
        android:textSize="20dp" />

    <Spinner
        android:id="@+id/znaps"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dip"
        android:layout_marginRight="8dip"
        android:layout_marginTop="10dip"
        android:entries="@array/znaps" />

    <Spinner
        android:id="@+id/services"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/znaps"
        android:layout_marginTop="21dp" />

    <Button
        android:id="@+id/btLeaveReview"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="22dp"
        android:background="@color/color"
        android:text="Залишити відгук"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btBad"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignLeft="@+id/etDescription"
        android:layout_alignStart="@+id/etDescription"
        android:layout_below="@+id/etDescription"
        android:layout_marginTop="32dp"
        android:drawableLeft="@drawable/bad"
        android:text="0"
        android:padding="16dp"
        android:textSize="24sp" />


    <Button
        android:id="@+id/btGood"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignBaseline="@+id/btBad"
        android:layout_alignBottom="@+id/btBad"
        android:layout_alignEnd="@+id/etDescription"
        android:layout_alignRight="@+id/etDescription"
        android:drawableLeft="@drawable/good"
        android:padding="16dp"
        android:text="1"
        android:textSize="24sp" />

</RelativeLayout>