<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:padding="15dp"
    tools:context="com.znap.lmr.lmr_znap.Activities.RateActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Оберіть ЦНАП"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="18dp" />

            <Spinner
                android:id="@+id/znaps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:textAlignment="center"
                android:textColor="#000" />

            <EditText
                android:id="@+id/etDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"

                android:background="#E0E0E0"
                android:ems="10"
                android:hint=" Розкажіть нам про це"
                android:padding="10dp"

                android:textSize="20dp" />

            <TextView
                android:id="@+id/labelForQuality"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="45dp"
                android:text="Оберіть враження від обслуговування"
                android:textColor="#000"
                android:textSize="18dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="45dp"
                android:background="@color/color"
                android:gravity="center_horizontal"
                android:orientation="horizontal">


                <tr.xip.widget.simpleratingview.SimpleRatingView xmlns:srv="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/simple_rating_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/color" />
            </LinearLayout>


            <TextView
                android:id="@+id/rating"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color"
                android:gravity="center_horizontal" />

            <TextView
                android:id="@+id/appearance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Зовнішній вигляд"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="18dp" />

            <RatingBar
                android:id="@+id/ratingBar1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:numStars="5" />

            <TextView
                android:id="@+id/goodmood"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Привітність"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="18dp" />

            <RatingBar
                android:id="@+id/ratingBar2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:numStars="5" />

            <TextView
                android:id="@+id/proffesionality"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Консультація професіонала"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="18dp" />

            <RatingBar
                android:id="@+id/ratingBar3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:numStars="5" />

            <TextView
                android:id="@+id/rate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Загальне враження"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="18dp" />

            <RatingBar
                android:id="@+id/ratingBar4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:numStars="5" />

            <Button
                android:id="@+id/btLeaveReview"
                android:layout_width="200dp"
                android:layout_height="55dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="70dp"
                android:layout_weight="1"
                android:text="Залишити відгук"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:theme="@style/mainActButton" />

        </LinearLayout>
    </ScrollView>


</RelativeLayout>