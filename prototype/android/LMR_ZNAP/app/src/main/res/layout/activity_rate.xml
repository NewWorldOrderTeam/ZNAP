<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvLeaveReview"
        android:layout_width="350dp"
        android:layout_height="30dp"
        android:textSize="29dp"
        android:textStyle="normal"
        android:textAlignment="center"
        android:text="Залишити відгук"
        android:layout_marginTop="15dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioGroup"
        android:layout_alignLeft="@+id/tvLeaveReview"
        android:layout_alignStart="@+id/tvLeaveReview">

        <RadioButton
            android:id="@+id/znap_sq_runok"
            android:layout_width="138dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/radioGroup"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/radioGroup"
            android:layout_marginTop="72dp"
            android:text="ЦНАП пл. Ринок 1" />

        <RadioButton
        android:id="@+id/znap_str_levutskogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/znap_sq_runok"
        android:layout_alignStart="@+id/znap_sq_runok"
        android:layout_below="@+id/znap_sq_runok"
        android:text="ЦНАП на вул. К. Левицького, 67" />

    <RadioButton
        android:id="@+id/znap_str_hvulovogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/znap_str_levutskogo"
        android:layout_alignStart="@+id/znap_str_levutskogo"
        android:layout_below="@+id/znap_str_levutskogo"
        android:text="ЦНАП на вул. М. Хвильового, 14а" />

    <RadioButton
        android:id="@+id/znap_pr_kalunu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/radioGroup"
        android:layout_alignStart="@+id/radioGroup"
        android:layout_below="@+id/znap_str_hvulovogo"
        android:text="ЦНАП на пр. Ч. Калини, 72а" />


        <RadioButton
        android:id="@+id/znap_str_shevchenka"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/radioGroup"
            android:layout_alignStart="@+id/radioGroup"
        android:layout_below="@+id/radioGroup"
        android:text="ЦНАП на вул. Т. Шевченка, 374 (Рясне)"/>

    <RadioButton
        android:id="@+id/znap_str_chuprunku"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/znap_str_shevchenka"
        android:layout_alignStart="@+id/znap_str_shevchenka"
        android:layout_below="@+id/znap_str_shevchenka"
        android:text="ЦНАП на вул. Ген. Чупринки, 85" />

    <RadioButton
        android:id="@+id/znap_str_vitovskogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/znap_str_chuprunku"
        android:layout_alignStart="@+id/znap_str_chuprunku"
        android:layout_below="@+id/znap_str_chuprunku"
        android:text="ЦНАП на вул. І. Вітовського, 32" />

    </RadioGroup>

    <Button
        android:id="@+id/btGoodReview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/radioGroup"
        android:layout_alignStart="@+id/radioGroup"
        android:layout_below="@+id/radioGroup"
        android:layout_marginLeft="36dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="12dp"
        android:text=" : )" />

    <Button
        android:id="@+id/btBadReview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/radioGroup"
        android:layout_alignRight="@+id/radioGroup"
        android:layout_alignTop="@+id/btGoodReview"
        android:text=" : (" />

    <EditText
        android:id="@+id/etLeaveReview"
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Залиште відгук"
        android:textSize="20dp"
        android:layout_below="@+id/btGoodReview"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btLeaveReview"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textSize="20dp"
        android:text="Залишити відгук"
        android:layout_below="@+id/etLeaveReview"
        android:layout_alignLeft="@+id/etLeaveReview"
        android:layout_alignStart="@+id/etLeaveReview" />


</RelativeLayout>